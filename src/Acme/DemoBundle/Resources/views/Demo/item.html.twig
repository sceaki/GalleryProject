{% extends "AcmeDemoBundle::layout.html.twig" %}

{% block title "Item" %}

{% block content %}
	{% for key, value in elem %}
    <h1>{{value.image_name}}</h1>
	
		{#Key : {{ key }}#}
		<table>
			 <tr>
				<td>
					<a href="{{ path('_demo_item', {'id': value.idimage}) }}">
						<img src="{{ asset('bundles/acmedemo/images/'~ value.image_file) }}" style="max-width:80%; "/>
						
						<br/>
						{{value.image_description}}
					</a>
				</td>
			 </tr>
		 </table>
	
	{% endfor %}
	
{% endblock %}


{% set code = code(_self) %}
